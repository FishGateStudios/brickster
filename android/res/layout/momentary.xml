<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:splitMotionEvents="true" >

    <ImageView
        android:id="@+id/background_momentary"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:clickable="false"
        android:contentDescription="@string/title_momentary"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:longClickable="false"
        android:scaleType="centerInside"
        android:scrollbarAlwaysDrawVerticalTrack="false"
        android:src="@drawable/bg_momentary" />
    
    <TextView android:id="@+id/title_right_text"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:ellipsize="end"
        android:singleLine="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#fff"
    />

    <Button
        android:id="@+id/button_red_fwd"
        android:layout_width="78dp"
        android:layout_height="72dp"
        android:layout_alignLeft="@+id/background_momentary"
        android:layout_alignTop="@+id/background_momentary"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="150dp"
        android:background="@android:color/transparent"
        android:longClickable="false" />

    <Button
        android:id="@+id/button_red_rev"
        android:layout_width="78dp"
        android:layout_height="72dp"
        android:layout_alignLeft="@+id/button_red_fwd"
        android:layout_below="@+id/button_red_fwd"
        android:layout_marginTop="9dp"
        android:background="@android:color/transparent"
        android:longClickable="false" />

    <Button
        android:id="@+id/button_blue_fwd"
        android:layout_width="78dp"
        android:layout_height="72dp"
        android:layout_alignRight="@+id/background_momentary"
        android:layout_alignTop="@+id/background_momentary"
        android:layout_marginRight="89dp"
        android:layout_marginTop="150dp"
        android:background="@android:color/transparent"
        android:longClickable="false" />

    <Button
        android:id="@+id/button_blue_rev"
        android:layout_width="78dp"
        android:layout_height="72dp"
        android:layout_alignBottom="@+id/button_red_rev"
        android:layout_alignLeft="@+id/button_blue_fwd"
        android:background="@android:color/transparent"
        android:longClickable="false" />

    <CheckBox
        android:id="@+id/check_red_flip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/button_red_rev"
        android:layout_below="@+id/button_red_rev"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="72.5dp" />

    <CheckBox
        android:id="@+id/check_blue_flip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/button_blue_rev"
        android:layout_below="@+id/button_blue_rev"
        android:layout_marginRight="14dp"
        android:layout_marginTop="72.5dp" />
        
</RelativeLayout>

